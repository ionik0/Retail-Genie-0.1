# Retail-Genie Environment Configuration
# Copy this file to .env and fill in your values

# Server Port
PORT=5000

# Recommender Service
RECOMMENDER_URL=http://localhost:8000/recommend

# Database (optional)
MONGO_URI=
DB_NAME=omnisell

# ============================================
# AI CONFIGURATION - Hugging Face + DeepSeek
# ============================================

# Enable/Disable AI Features
# Set to "false" to fallback to legacy regex-based system
AI_ENABLED=true

# Hugging Face Inference API
# Get your free token: https://huggingface.co/settings/tokens
HF_API_KEY=hf_YOUR_TOKEN_HERE

# Model Configuration
AI_MODEL=deepseek-ai/deepseek-7b-chat
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=500

# ============================================
# OPTIONAL: Local DeepSeek Fallback
# ============================================

# Enable local DeepSeek as fallback
# Run: ollama pull deepseek-coder:7b-chat && ollama serve
USE_LOCAL_DEEPSEEK=false

# Local DeepSeek endpoint
DEEPSEEK_URL=http://localhost:8001
